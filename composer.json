{
    "name": "artincms/php-api-tron",
    "description": "A PHP API for interacting with Tron (Trx)",
    "license": "MIT",
    "type":   "library",
    "homepage": "https://github.com/artincms/php-api-tron",
    "authors": [
        {
            "name": "Adel Raheli",
            "email": "adel.raheli@gmail.com"
        }
    ],
    "keywords": [
        "artincms",
        "tron-lib",
        "tron-php",
        "tron-api",
        "tron-rest-api"
    ],
    "require": {
        "php": "^7.4",
        "ext-bcmath": "*",
        "ext-json": "*",
        "artincms/php-web3": "dev-master",
        "comely-io/data-types": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "kornrunner/secp256k1": "^0.1.2",
        "simplito/elliptic-php": "^1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "artincms\\TronAPI\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "artincms\\TronAPI\\Test\\": "tests"
        }
    },

    "config": {
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
